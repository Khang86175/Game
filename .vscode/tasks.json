{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build all in source/",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Isource",                      // thêm include path cho header trong source/
                "-IC:\\SFML-3.0.0\\include",
                "source/*.cpp",                  // biên dịch tất cả file .cpp trong thư mục source/
                "-LC:\\SFML-3.0.0\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-o",
                "Diepio.exe",                       // file xuất ra trong thư mục gốc
                "app_res.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"      // chạy lệnh trong thư mục gốc dự án
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all files inside source/ folder"
        }
    ]
}
